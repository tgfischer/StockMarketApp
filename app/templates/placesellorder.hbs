<h4><b>Place Sell Order For {{company.name}}</b></h4>

<div class="row">
	<div class="col-xs-14 col-md-10">
		<form class="form-horizontal">
			<div class="form-group">
				<label for="bidVolumeInput" class="col-sm-1 control-label">Volume</label>
				<div class="col-sm-11">
					{{input type="text" id="bidVolumeInput" class="form-control" placeholder="Volume"}}
				</div>
			</div>
			<div class="form-group">
				<label for="bidPriceInput" class="col-sm-1 control-label">Price</label>
				<div class="col-sm-11">
					{{input type="text" id="bidPriceInput" class="form-control" placeholder="Price"}}
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-1 col-sm-11">
					<button type="submit" class="btn btn-default" {{action "submit"}}>Submit</button>
					<button type="submit" class="btn btn-default" {{action "cancel"}}>Cancel</button>
				</div>
			</div>
		</form>
	</div>
</div>