<div class="row">
	<div class="col-xs-14 col-md-10">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h4 class="panel-title"><b>Place Bid Order For {{this.name}}</b></h4>
			</div>
			<div class="panel-body">
				<form class="form-horizontal">
					<div class="form-group">
						<label for="bidVolumeInput" class="col-sm-2 control-label">Volume</label>
						<div class="col-sm-10">
							{{input type="text" id="bidVolumeInput" class="form-control" placeholder="Volume"}}
						</div>
					</div>
					<div class="form-group">
						<label for="bidPriceInput" class="col-sm-2 control-label">Price</label>
						<div class="col-sm-10">
							{{input type="text" id="bidPriceInput" class="form-control" placeholder="Price"}}
						</div>
					</div>
					<div class="form-group">
						<div class="col-sm-offset-2 col-sm-10">
							<button type="submit" class="btn btn-default" {{action "submit"}}>Submit</button>
							<button type="cancel" class="btn btn-default" {{action "cancel"}}>Cancel</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
	<div class="col-xs-4 col-md-2">
		<h4 class="text-center"><b>Company Logo</b></h4>
  		{{partial "symbol" this}}
  	</div>
</div>